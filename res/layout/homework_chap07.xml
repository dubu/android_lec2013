<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:text="ID"
            android:id="@+id/homework_chap07_idText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homework_chap07_passwordText"
            android:layout_alignLeft="@+id/homework_chap07_idText"
            android:layout_alignParentTop="true"
            android:layout_marginTop="74dp"
            android:layout_alignRight="@+id/homework_chap07_idText"
            android:password="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fire !!"
            android:id="@+id/homework_chap07_submitButton"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="137dp"
            android:layout_alignTop="@+id/homework_chap07_passwordText"/>

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="397dp"
            android:id="@+id/homework_chap07_listView"
            android:layout_alignLeft="@+id/editText"
            android:layout_alignParentTop="true"
            android:layout_marginTop="150dp"
            android:layout_alignParentBottom="true"
            android:background="#181414"/>
</RelativeLayout>